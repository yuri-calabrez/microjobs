{% extends "base-painel.html.twig" %}

{% block topo_painel %}
    <h3>Listando vendas</h3>
{% endblock %}

{% block body_painel %}
    {% for venda in vendas %}
        <div class="card mt-2">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-1">
                        <img src="{{ asset(caminho_imagens ~ venda.servico.imagem) }}"
                             alt="{{ venda.servico.titulo }}" width="60">
                    </div>
                    <div class="col-md-5">
                        <h5>{{ venda.servico.titulo }}</h5>
                    </div>
                    <div class="col-md-2">
                        <p>{{ venda.dataCadastro | date("d/m/Y") }}</p>
                    </div>
                    <div class="col-md-3">
                        <p>{{ venda.cliente.nome }}</p>
                    </div>
                    <div class="col-md-1">
                        <a href="" class="btn btn-danger float-right btn-sm"></a>
                        <a href="" class="btn btn-success float-right btn-sm"></a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="card mb-2">
            <div class="card-body">
                <div class="alert alert-info">Nenhum servi√ßo conratado</div>
            </div>
        </div>
    {% endfor %}

{% endblock %}

{% block title %}
    Listando vendas de {{ app.user.nome }}
{% endblock %}