{% extends 'base.html.twig' %}

{% block body %}

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <h2>{{ job.titulo }}</h2>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-7">
                <div class="row">
                    <div class="col-md-12">
                        <img src="{{ asset(caminho_imagens ~ job.imagem) }}" alt="{{ job.titulo }}" class="img-fluid img-thumbnail">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12 text-justify">
                        <h3>Descrição</h3>
                        {{ job.descricao | nl2br }}
                    </div>
                </div>
                {% if job.informacoesAdicionais %}
                    <div class="row mt-3">
                        <div class="col-md-12 text-justify">
                            <h3>Informações adicionais</h3>
                            {{ job.informacoesAdicionais | nl2br }}
                        </div>
                    </div>
                {% endif %}
                <hr>
                <div class="row">
                    <div class="col-md-12">
                        {% for categoria in job.categorias %}
                            <span class="badge badge-secondary">{{ categoria.nome }}</span>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center">Contratar serviço</h3>
                    </div>
                    <div class="card-body">
                        <h4 class="display-3 text-center text-danger text-lg-center mb-4">
                            R$ {{ job.valor | number_format(2, ',', '.') }}
                        </h4>
                        <a href="{{ path('contratar_servico', {id: job.id, slug: job.slug}) }}" class="btn btn-lg btn-block btn-outline-success">Contratar</a>
                    </div>
                </div>
                <div class="card mt-3">
                    <div class="card-header">
                        <h3 class="text-center">Detalhes do Profissional</h3>
                    </div>
                    <div class="card-body">
                        <img class="rounded float-left mr-3" src="{{ vich_uploader_asset(job.usuario.dadosPessoais, 'foto_file') | imagine_filter('thumb_profile_job') }}" alt="">
                        <h4>{{ job.usuario.nome }}</h4>
                        <hr>
                        <div class="clearfix"></div>
                        <div class="mt-4">
                            {{ job.usuario.dadosPessoais.curriculo | nl2br }}
                        </div>
                        <p><strong>Cidade:</strong> {{ job.usuario.dadosPessoais.cidade }} / {{ job.usuario.dadosPessoais.estado }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block title %}

    {{ job.titulo }} -

{% endblock %}
